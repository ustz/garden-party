<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="title">
        <h1>Edit</h1>
        <%= link_to "Back", gardens_path, class: "btn btn-primary" %>
      </div>
      <div class="edit-form">
        <%= simple_form_for(@user) do |f| %>
          <%= f.error_notification %>
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :email %>
          <%= f.submit class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
