<h1 class="text-center"> My dashboard</h1>
<div class="tabs">
  <a class="tab active" href="#">
    <h3>My Requests</h3>
    <p>(Number of gardens)</p>
  </a>
  <a class="tab" href="#">
    <h3>My Parties</h3>
    <p>(Number of parties)</p>
  </a>
  <a class="tab" href="#">
    <h3>My reviews</h3>
    <p>(Number of reviews)</p>
  </a>
</div><!-- end of tab #1 -->
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title">Panel Heading</h3>
            </div>
            <div class="col col-xs-6 text-right">
              <button type="button" class="btn btn-sm btn-primary btn-create">Create New</button>
            </div>
          </div>
        </div>
        <div class="panel-body">
         <table class="table table-striped table-bordered table-list">
          <thead>
            <tr>
              <th>#</th>
              <th>Garden</th>
              <th>User</th>
              <th>Check in</th>
              <th>Check out</th>
              <th>Price</th>
              <td>Statut</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% current_user.gardens.each do |garden| %>
              <% garden.bookings.each do |booking| %>
              <% if booking.status == "pending" %>
              <% user = User.find(booking.user_id) %>
              <td><%= booking.id %></td>
              <td> <%= cl_image_tag garden.photo, class:"product-image hidden-xs" %> </td>
              <td><%= user.email %></td>
              <td><%= booking.checkin_at %></td>
              <td><%= booking.checkout_at %></td>
              <td> Price (euro) </td>
              <td align="center">
                <%= link_to accept_garden_booking_path(booking.garden, booking), method: :patch, class: "btn btn-success" do %>
                <em class="fa fa-thumbs-up"></em>
                <% end %>
                <%= link_to reject_garden_booking_path(booking.garden, booking), method: :patch, class: "btn btn-danger" do %>
                <em class="fa fa-thumbs-down"></em>
                <% end %>
              </td>
              <% end %>
              <% end %>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
