<h1>My dashboard</h1>

<h2>my gardens:</h2>
<% current_user.gardens.each do |garden| %>

  <%= garden.title%>
  <%= garden.description%>

  <ul>
  <% garden.bookings.each do |booking| %>
    <li>
      <%= booking.user.first_name %>
      <%= booking.status %>
      <%= booking.checkin_at %>
      <%= booking.checkout_at %>
    </li>
  <% end %>
  </ul>

<% end %>

