<div class="home-banner" style="background-image: linear-gradient(135deg, rgba(99,25,78,0.65) 6%,rgba(99,25,78,0.5) 38%,rgba(99,25,78,0.2) 100%), url(<%= image_path 'banner.jpg' %>)">
  <%= render 'shared/homepage_navbar' %>
  <div class="banner">
    <div class="banner-content">
      <h1>Garden Party</h1>
      <p>One garden, one party</p>

      <!-- Search Bar -->
      <div class="search-bar">
        <%= simple_form_for :search,  url: gardens_path , method: :get do |f| %>
        <%= f.input :city, label: false, placeholder: 'Where ?', wrapper_html: { class: 'input-form city-search' } %>
        <%= f.input :capacity, label: false, wrapper_html: { class: 'input-form capacity-search' }, collection: ["Less than 10", "10 - 49", "50 - 100", "More than 100"], prompt: 'Persons ?' %>
        <%= f.submit "Search", class: 'btn btn-primary my-btn search-btn' %>
        <% end %>
      </div>
      <!-- end -->

    </div>
  </div>
</div>
